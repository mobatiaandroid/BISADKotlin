<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeMain"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titlelinear"
        android:orientation="horizontal">

        <com.mobatia.bisad.manager.CustomFontSansProTextNoColorSemiBold
            android:id="@+id/titleheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="Academic Year:"
            android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <com.mobatia.bisad.manager.CustomFontSansProTextNoColorSemiBold
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="swewer"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativeclick"
        android:layout_width="fill_parent"
        android:layout_below="@+id/titlelinear"
        android:layout_height="wrap_content"
        >


        <com.mobatia.bisad.manager.CustomFontSansProTextWhiteWithoutColor
            android:id="@+id/report_cycle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="asdeew"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/arrowImg"
            android:maxLines="2"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="16sp"
            tools:ignore="UnknownIdInLayout" />

        <ImageView
            android:id="@+id/arrowImg"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow" />

    </RelativeLayout>
    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeclick"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/split_bg">

    </View>

</RelativeLayout>

